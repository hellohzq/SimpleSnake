package
{
	import flash.display.Sprite;
	import flash.text.TextField;
		
	/**
	 *  @author Administrator Date: 2010-8-25
	 *
	 */
	public class Mask extends Sprite
	{
		//--------------------------------------------------------------------------
		//
		//  Class constants
		//
		//--------------------------------------------------------------------------
		
		
		
		//--------------------------------------------------------------------------
		//
		//  Constructor
		//
		//--------------------------------------------------------------------------
		
		/**
		 *  Constructor.
		 */
		
		public function Mask()
		{
			super();
			
			graphics.beginFill(Config.MASK_COLOR,0.5);
			var temp:int = Config.GRID_WIDTH*Config.GRID_X_NUMBER;
			graphics.drawRect(0,0,temp , temp );
			graphics.endFill();
			
			tf = new TextField();
			addChild(tf);
			tf.multiline = true;
			tf.htmlText = "<font size=\"30\" >按空格键---开始/暂停！</font>";
			tf.width = 300;
			tf.height = 300;
			tf.x = 50;
			tf.y = 120;
		}
		
		//--------------------------------------------------------------------------
		//
		//  Variables
		//
		//--------------------------------------------------------------------------
		
		/**
		 *  @private
		 *  
		 */
		public var tf:TextField = new TextField();
		
		
		//--------------------------------------------------------------------------
		//
		//  Properties
		//
		//--------------------------------------------------------------------------
		
		
		//----------------------------------
		//  property
		//----------------------------------
		/**
		 *  @private
		 */
		
		
		
